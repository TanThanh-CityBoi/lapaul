{{>index_header}}
<div style="padding-top: 8rem;">

    <div class="container-fluid main-container col-lg-5 col-md-8 col-sm-11 mt-5" style="border: 1px solid gray;border-radius: 8px;padding: 30px;">
        <div class="header align-items-center">
            <h2 style="font-family: PoppinsVN-700, sans-serif;">Chuyển tiền</h2>
        </div>
        <div class="header align-items-center">
            <p>Vui lòng nhập các thông tin người nhận tiền</p>
        </div>

        <form method="post" class="px-4 px-sm-4 px-m-5 px-lg-4 pt-3">
            <div class="renew">
                <div class="form-group">
                    <label class="credit_card_number-label" for="credit_card_number">Số điện thoại</label>
                    <input id="credit_card_number" name="credit_card_number" value="{{formdata.credit_card_number}}" type="text" pattern="\d*" maxlength="10" minlength="10" class="form-input" placeholder="Số điện thoại" required>
                </div>
                <div class="form-group">
                    <label class="payment_money-label" for="payment_money">Số tiền</label>
                    <input id="payment_money" name="payment_money" value="{{formdata.payment_money}}"  min="10000" max="10000000" type="number" class="form-input" placeholder="Nhập số tiền" required>
                </div>
                <div class="form-group">
                    <label class="payment_detail-label" for="payment_detail">Ghi chú</label>
                    <input id="payment_detail" name="payment_detail" type="text" class="form-input" placeholder="Ghi chú">
                </div>
                {{#if transform}}
                    <div class="form-group">
                        <label class="receiver-name-label" for="receiver_name">Tên người nhận</label>
                        <input id="receiver_name" name="receiver_name" value="{{transform.name}}" type="text" class="form-input" placeholder="Tên người nhận" disabled>
                    </div>
                    <div class="form-group">
                        <label class="fee-label" for="fee">Người chịu phí</label>
                        <select id="fee" name="fee" class="form-input" style="padding: 2px 14px">
                            <option value="sender">Người gửi</option>
                            <option value="receiver">Người nhận</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="otp-label" for="otp">Mã xác nhận</label>
                        <input id="otp" name="otp" type="phone" class="form-input" placeholder="Mã xác nhận OTP">
                    </div>
                    <p class="text-danger" id="countdown"></p>
                    <script>
                        var timeleft = 60;
                        var downloadTimer = setInterval(function(){
                            if(timeleft <= 0){
                                clearInterval(downloadTimer);
                                document.getElementById("countdown").innerHTML = 'Mã OTP đã quá hạn';
                            }
                            document.getElementById("countdown").innerHTML = 'Lưu ý, mã OTP sẽ quá hạn sau '+ timeleft + 's';
                            timeleft -= 1;
                        }, 1000);
                    </script>
                {{/if}}
                {{#if error}}
                    <div class="form-group">
                        <div class="alert alert-danger">{{error.msg}}</div>
                    </div>
                {{/if}}
                {{#if transform}}
                    <div class="input-group custom-control custom-checkbox pt-2">
                        <div class="custom-button text-right">
                            <input type="submit" name="btn_submit" class="btn btn-logout" value="Gửi lại mã">
                            <input type="submit" name="btn_submit" class="btn btn-login" value="Chuyển tiền">
                        </div>
                    </div>
                {{else}}
                    <div class="input-group custom-control custom-checkbox pt-2">
                        <div class="custom-button text-right">
                            <input type="submit" name="btn_submit" class="btn btn-login" value="Gửi mã OTP">
                        </div>
                    </div>
                {{/if}}

            <div id = 'error-activeAccount' style="display: none;" class='alert-danger'></div>
            </div>
        </form>
    </div>
</div>